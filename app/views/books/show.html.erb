<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag(@book.cover, class: "img-fluid rounded-start", alt: "Book Cover") %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="display-6"><%= @book.title %></h5>
        <p class="card-text">  <%= @book.author %></p>
        <p class="card-text"><%= @book.description %></p>
        <p class="card-text"><%= @book.language %></p>
        <p class="card-text"><%= @book.isbn %></p>

      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-secondary" %>
  <%= link_to "Delete", book_path(@book), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  }, class: "btn btn-outline-secondary" %>
</div>